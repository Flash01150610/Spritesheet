        <div id="game"></div>
        <script>

            const phaserConfig = {
                type: Phaser.AUTO,
                parent: "game",
                width: 1280,
                height: 720,
                scene: {
                    init: initScene,
                    preload: preloadScene,
                    function createScene() {
this.anims.create({
        key: "fly",
        frameRate: 7,
        frames: this.anims.generateFrameNames("plane", {
            prefix: "plane",
            suffix: ".png",
            start: 1,
            end: 3,
            zeroPad: 1
        }),
        repeat: -1
    });

    this.anims.create({
        key: "explode",
        frameRate: 7,
        frames: this.anims.generateFrameNames("plane", {
            prefix: "explosion",
            suffix: ".png",
            start: 1,
            end: 3,
            zeroPad: 1
        }),
        repeat: 2
    });

}

                    update: updateScene
                }
            };

            const game = new Phaser.Game(phaserConfig);

            function initScene() { }
            function preloadScene()
    {this.load.atlas("plane", "plane.png", "plane.json");
}
function createScene() {

    // Animations ...

    plane = this.add.sprite(640, 360, "plane");
    plane.play("fly");
/
}
function createScene() {

    // Animations ...

    plane = this.add.sprite(640, 360, "plane");
    plane.play("fly");

    setTimeout(() => {
        plane.play("explode");
        plane.once(Phaser.Animations.Events.SPRITE_ANIMATION_COMPLETE, () => {
            plane.destroy();
        });
    }, 3000);

}
            function updateScene() {}

        </script>
